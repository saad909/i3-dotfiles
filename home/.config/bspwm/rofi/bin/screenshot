#!/bin/bash

DIR="$HOME/.config/bspwm"

rofi_command="rofi -theme $DIR/rofi/themes/screenshot.rasi"

# Options
screen=""
area=""
window=""

# Variable passed to rofi
options="$screen\n$area\n$window"

chosen="$(echo -e "$options" | $rofi_command -p 'Screenshot' -dmenu -selected-row 1)"
case $chosen in
    $screen)
        sleep 1;scrot '%Y-%m-%d_$wx$h.png' -e 'mv $f ~/Pictures/screenshots/'
        ;;
    $area)
        sleep 1;scrot -s '%Y-%m-%d_$wx$h.png' -e 'mv $f ~/Pictures/screenshots/'
        ;;
    $window)
        scrot -u '%Y-%m-%d_$wx$h.png' -e 'mv $f ~/Pictures/screenshots/'
        ;;
esac

